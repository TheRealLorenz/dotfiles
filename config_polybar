[module/trash]
type = custom/script
format = <label>
label = %output%
label-foreground = ${colors.foreground}
format-prefix = " "
format-prefix-foreground = #23ce6b
format-underline = #23ce6b
exec = trash-list | wc -l
click-right = trash-empty
click-left = alacritty -e ~/.config/polybar/scripts/trash-show.sh 
interval = 5

;========================================================== ----***********----

[module/temp]
